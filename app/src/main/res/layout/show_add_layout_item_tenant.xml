<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/layoutone"
        android:layout_height="@dimen/_45sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/iteam_name"
                android:textSize="@dimen/_15sdp"
                android:text="item name"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:background="@color/black"
            android:layout_height="match_parent"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone"
                android:id="@+id/artical_id"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:text="item name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/iteam_code_view"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:text="item code"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:background="@color/black"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/iteam_assign_date"
                android:textSize="@dimen/_15sdp"
                android:text="assign date"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/_1sdp"
            android:visibility="gone"
            android:background="@color/black"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/iteam_remove"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_23sdp"
                android:background="@drawable/delete_icon"
                android:layout_height="@dimen/_23sdp" />

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_below="@+id/layoutone"
        android:layout_height="@dimen/_1sdp"></View>


</RelativeLayout>
