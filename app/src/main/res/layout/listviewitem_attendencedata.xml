<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="12"
    android:id="@+id/attendenceheader"
    android:layout_below="@+id/layouttwo"
    android:orientation="horizontal"
    android:layout_height="@dimen/_45sdp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Room no"
        android:id="@+id/roomnoview"
        android:textStyle="normal"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_weight="2"
        android:textSize="@dimen/_15sdp"
        />
    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="match_parent"
        android:background="#000000"></View>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Tenant name"
        android:gravity="center"
        android:id="@+id/tenantnameview"
        android:textStyle="normal"
        android:textColor="#000000"
        android:layout_weight="4"
        android:textSize="@dimen/_15sdp"/>
    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="match_parent"
        android:background="#000000"></View>
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="4"
        >

        <RadioButton
            android:id="@+id/radio_absent"
            android:layout_width="0dp"
            android:layout_weight="2"
           android:layout_height="wrap_content"
            android:checked="true"
            android:theme="@style/MyCheckBox"
            android:text="A" />

        <RadioButton
            android:id="@+id/radio_present"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:theme="@style/MyCheckBox"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:text="P" />
    </RadioGroup>
    <View
        android:layout_width="@dimen/_1sdp"
        android:layout_height="match_parent"
        android:background="#000000"></View>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/submit_layout"
        android:gravity="center"
        android:layout_weight="2">

        <ImageView
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_18sdp"
            android:textStyle="normal"
            android:gravity="center"
            android:id="@+id/imageright"
            android:background="@drawable/red_right"
            android:textSize="@dimen/_13sdp"
            />
        <ImageView
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_18sdp"
            android:textStyle="normal"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/imageright_green"
            android:background="@drawable/green_right"
            android:textSize="@dimen/_13sdp"
            />
    </RelativeLayout>

</LinearLayout>
