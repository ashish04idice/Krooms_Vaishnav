<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="#ff5d27"
        android:layout_height="@dimen/_52sdp">
        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/back_button"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_pading_10"
            android:drawablePadding="@dimen/text_pading_4"
            android:gravity="center"
            android:text="Payment"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_16sdp"
            android:textStyle="normal" />


        <TextView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/downloadxl"
            android:textAllCaps="true"
            android:id="@+id/downloadpaid"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/downloadxl"
            android:textAllCaps="true"
            android:id="@+id/downloadunpaid"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_14sdp"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:id="@+id/tabheader"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="@dimen/_35sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/_1sdp"
            android:id="@+id/paid_layout"
            android:background="@color/grey"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="Paid"
                android:textSize="@dimen/_15sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/lightgray"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:id="@+id/unpaid_layout"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="match_parent"
                android:text="Unpaid"
                android:textSize="@dimen/_16sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="match_parent" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/paid_main_layout"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textColor="#000"
                android:text="Room"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:background="@drawable/cell_shape"
                />

            <TextView
                android:id="@+id/id"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Photo"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>



            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="Name"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>


            <TextView
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Amount"
                android:textSize="@dimen/_14sdp"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/cell_shape"/>

            <TextView
                android:id="@+id/add1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="paid"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/cell_shape"/>



            <TextView
                android:id="@+id/add2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="Paid"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>

            <TextView
                android:id="@+id/add3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

        <ListView
            android:id="@+id/list_paid"
            android:layout_height="match_parent"
            android:layout_above="@+id/lay"
            android:layout_width="match_parent">
        </ListView>


        <LinearLayout
            android:id="@+id/lay"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:weightSum="1"
            android:orientation="horizontal"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Amount Total="
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=""
                android:id="@+id/txtamounttotal"
                android:textSize="@dimen/_13sdp"

                />

                </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Paid Total="
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:id="@+id/txtpaidtotal"
                    android:textSize="@dimen/_13sdp"
                    />

            </LinearLayout>



            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/unpaid_main_layout"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:textColor="#000"
                android:text="Room"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:background="@drawable/cell_shape"
                />


            <TextView
                android:id="@+id/id1"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Photo"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>



            <TextView
                android:id="@+id/name1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:text="Name"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>


            <TextView
                android:id="@+id/add_in"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Last-in"
                android:textSize="@dimen/_14sdp"
                android:textColor="#000"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/cell_shape"/>

            <TextView
                android:id="@+id/add_out"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Amount"
                android:textSize="@dimen/_14sdp"
                android:visibility="visible"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/cell_shape"/>



            <TextView
                android:id="@+id/interval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:text="Paid"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>

            <TextView
                android:id="@+id/resone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/cell_shape"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <ListView
                android:id="@+id/list_unpaid"
                android:layout_height="match_parent"
                android:layout_above="@+id/layunpaid"
                android:layout_width="match_parent">
            </ListView>


            <LinearLayout
                android:id="@+id/layunpaid"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:weightSum="1"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Amount Total="
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:id="@+id/txtunpaidtotal"
                        android:textSize="@dimen/_13sdp"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:visibility="gone"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Paid Total="
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/_13sdp"
                        />

                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
