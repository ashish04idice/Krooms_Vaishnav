<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/topPanelBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@color/orange_color">

        <ImageButton
            android:id="@+id/main_header_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/text_pading_15"
            android:src="@drawable/ic_back_arrow" />

        <com.krooms.hostel.rental.property.app.custom.CustomTextView
            android:id="@+id/PropertyNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Employee List"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20" />

        <ImageButton
            android:id="@+id/editTenantInformationBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/text_pading_15"
            android:visibility="gone"
            android:src="@android:drawable/ic_menu_edit"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/otherownerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin_5"
        android:layout_marginRight="@dimen/text_margin_5"
        android:clipToPadding="false"
        android:layout_below="@+id/topPanelBar"
        android:divider="@android:color/transparent">

    </ListView>
    <ImageView
        android:id="@+id/loader"
        android:layout_height="@dimen/_30sdp"
        android:layout_width="@dimen/_30sdp"
        android:background="@drawable/red_loader"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
