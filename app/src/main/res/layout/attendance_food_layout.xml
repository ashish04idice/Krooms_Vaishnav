<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/orange_color"
        android:layout_height="@dimen/_52sdp">
        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/flback_button1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/text_pading_4"
            android:text="Food Record"
            android:id="@+id/property_name"
            android:gravity="center"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@drawable/white_text_selector"
            android:textSize="@dimen/text_size_18"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_toLeftOf="@+id/list_icon"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/restaurant_icon_attend"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/list_iconfood"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/list"
                />
        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:textSize="@dimen/_14sdp"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/getattedence"
            android:layout_gravity="center"
            android:background="@drawable/button_back_text"
            android:text="Get Attendance"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_35sdp" />


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/border"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="@dimen/_35sdp">

            <EditText
                android:id="@+id/roomno"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:hint="Enter Room No"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_40sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/getattedence_lay"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="#000000"
                android:gravity="center"
                android:background="@drawable/button_back_text"
                android:text="Get Attendance Click Here"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="@dimen/_40sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:background="@drawable/green_present"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Present"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_13sdp"
                    android:layout_height="@dimen/_13sdp"
                    android:background="@drawable/red_icon"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Absent"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Room"
            android:gravity="center"
            android:background="@drawable/cell_shape"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:textColor="#000"
            android:text="Name"
            android:gravity="center"
            android:background="@drawable/cell_shape"
            />


        <TextView
            android:id="@+id/id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:text="Breakfast"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/cell_shape"/>



        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:text="Lunch"
            android:gravity="center"
            android:textColor="#000"
            android:background="@drawable/cell_shape"/>


        <TextView
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tea"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/cell_shape"/>

        <TextView
            android:id="@+id/add1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Dinner"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/cell_shape"/>


    </LinearLayout>

  <!--  <include layout="@layout/display_top"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <ListView
        android:id="@+id/listfood"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </ListView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/orange_color"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/attendance_food_getrecord"
                >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/get_att_server"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/attendance_food_syn"
                >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/synchronization_att_white"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/list_hostelicon"
                >

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/hotel_icon_attend"
                    />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    </RelativeLayout>


</LinearLayout>
