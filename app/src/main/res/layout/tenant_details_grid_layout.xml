<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:background="@drawable/att_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/header1"
        android:background="@drawable/header_att"
        android:padding="@dimen/_2sdp"
        android:visibility="visible"
        android:layout_height="@dimen/_52sdp"
        android:weightSum="1"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_1sdp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/click"
                android:background="@drawable/rounded_krooms" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.64"
            android:layout_gravity="center"
            android:gravity="center"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="Hostel"
                android:id="@+id/property_name"
                android:gravity="center"
                android:singleLine="true"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/_3sdp"
                android:textColor="@drawable/white_text_selector"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:id="@+id/list_icon"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/list"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header1"
        android:layout_above="@+id/buttom_lay"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:id="@+id/lay_floor"
                android:weightSum="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:id="@+id/lay_firstfloor"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="G"
                            android:id="@+id/btng"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:textColor="@color/white"
                            />

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="1"
                            android:id="@+id/btn1"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />
                        <!-- android:background="@drawable/button_main_2_floor"-->
                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="2"
                            android:visibility="gone"
                            android:id="@+id/btn2"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="3"
                            android:visibility="gone"
                            android:id="@+id/btn3"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="4"
                            android:id="@+id/btn4"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>



                </LinearLayout>


                <LinearLayout
                    android:id="@+id/room_no_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:visibility="visible"
                    android:layout_weight="0.75"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Get Attendance"
                        android:background="@drawable/custom_btn_focus_att"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp"
                        android:id="@+id/getattedence"
                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:textStyle="normal" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/countlayout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:layout_below="@+id/lay_floor"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/showcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/_3sdp"
                        android:text="0"
                        android:textColor="#111111"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="#111111"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/showcounttotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/_3sdp"
                        android:text="0"
                        android:textColor="#111111"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible" />

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textMessage"
                    android:visibility="gone"
                    />
            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:id="@+id/layfloorsecond"
                android:visibility="gone"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:gravity="center"
                    android:visibility="visible"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="5"
                            android:id="@+id/btn5"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:textColor="@color/white"
                            />

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="6"
                            android:id="@+id/btn6"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="7"
                            android:id="@+id/btn7"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="8"
                            android:id="@+id/btn8"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />

                        <Button
                            android:layout_width="@dimen/_38sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:text="9"
                            android:id="@+id/btn9"
                            android:visibility="gone"
                            android:background="@drawable/floor_style"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_below="@+id/lay_floor"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.25"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal">



                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <GridView
                android:id="@+id/tenantgrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:visibility="visible" />





            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:visibility="gone"
                android:paddingLeft="@dimen/_4sdp"
                android:paddingRight="@dimen/_4sdp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/k_rooms"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/orange_color"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/attendance_hostel_getrecord"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/get_att_server" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/attendance_hostel_syn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/synchronization_att_white" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/list_foodicon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/restaurant_icon_attend" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/attendance_footer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="buttom header"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/dailog_bg"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="gone"
        android:id="@+id/buttom_lay"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/header_att"
            android:visibility="visible"
            android:layout_height="@dimen/_42sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="Attendance"
                android:gravity="center"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@drawable/white_text_selector"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:layout_alignParentRight="true"
                android:id="@+id/dailog_cancle"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/cross"
                    />
            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnsignin"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/button_back_signin"
                        android:text="Sign in"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnclass"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/button_back_class"
                        android:text="Class"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnlunch"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/button_back_lunch"
                        android:text="Food"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnmarket"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/button_back_market"
                        android:text="Market"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnvacation"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/button_back_vacation"
                        android:text="Vacation"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnnight"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/button_back_nightin"
                        android:text="Night in"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
