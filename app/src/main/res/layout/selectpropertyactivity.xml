<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/orange_color"
        android:layout_height="@dimen/_52sdp">
        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/fback_button"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_pading_10"
            android:drawablePadding="@dimen/text_pading_4"
            android:gravity="center"
            android:text="Select Property "
            android:textAllCaps="true"
            android:textColor="@drawable/white_text_selector"
            android:textSize="@dimen/text_size_18"
            android:textStyle="normal" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_height"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/k_rooms" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:id="@+id/spinnerlayout"
        android:background="@drawable/border"
        android:layout_height="@dimen/_50sdp">

        <TextView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="match_parent"
            android:hint="Select Property"
            android:layout_weight="1.5"
            android:id="@+id/selectproperty"
            android:gravity="center_vertical"
            android:textSize="@dimen/_18sdp"
            android:visibility="visible"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/green_color"
            />
        <TextView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="match_parent"
            android:hint="Select Property"
            android:layout_weight="1.5"
            android:visibility="gone"
            android:id="@+id/selectpropetyidvalue"
            android:gravity="center_vertical"
            android:textSize="@dimen/_18sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/green_color"
            />


        <TextView
            android:layout_width="@dimen/_270sdp"
            android:layout_height="match_parent"
            android:hint="Select Property"
            android:layout_weight="1.5"
            android:visibility="gone"
            android:id="@+id/propertyname"
            android:gravity="center_vertical"
            android:textSize="@dimen/_18sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/green_color"
            />

        <RelativeLayout
            android:layout_width="@dimen/_40sdp"
            android:background="@color/orange_color"
            android:gravity="center"
            android:layout_weight="0.5"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/downarraw"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_50sdp">

        <Button
            android:id="@+id/tanentpaid"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_focus"
            android:text=" Done "
            android:textAllCaps="true"
            android:textSize="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            />

    </LinearLayout>


</LinearLayout>
