<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="@color/orange_color"
        android:layout_height="@dimen/_52sdp">
        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/lback_button"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_pading_10"
            android:drawablePadding="@dimen/text_pading_4"
            android:gravity="center"
            android:text="Show Assigned Inventory"
            android:textAllCaps="true"
            android:textColor="@drawable/white_text_selector"
            android:textSize="@dimen/text_size_18"
            android:textStyle="normal" />


        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_headericoncomplaintowner"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_edit"
                />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/iteam_name_view"
                android:textSize="@dimen/_15sdp"
                android:text="Item Name"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:background="@color/black"
            android:layout_height="match_parent"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/iteam_code"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:text="Item Code"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:background="@color/black"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/iteam_date"
                android:textSize="@dimen/_15sdp"
                android:text="Date"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/_1sdp"
            android:visibility="gone"
            android:background="@color/black"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/iteam_remove"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/_1sdp"
                android:textSize="@dimen/_15sdp"
                android:text="Remove"/>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="@dimen/_1sdp"></View>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/showinventoerylist"></ListView>

</LinearLayout>
