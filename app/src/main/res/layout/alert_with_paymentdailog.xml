<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/createCustomCategoty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/createCutomCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:background="@color/orange_color">

            <com.krooms.hostel.rental.property.app.custom.CustomTextView
                android:id="@+id/alertTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Create custom category"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />

        </RelativeLayout>


        <com.krooms.hostel.rental.property.app.custom.CustomTextView
            android:id="@+id/categoryNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/createCutomCategoryTitle"
            android:layout_margin="@dimen/text_margin_15"
            android:gravity="center"
            android:paddingLeft="@dimen/text_pading_4"
            android:text="Test"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <com.krooms.hostel.rental.property.app.custom.ButtonPlus
            android:id="@+id/alertOkBtn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_small_height"
            android:layout_below="@+id/categoryNameInput"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_btn"
            android:paddingLeft="@dimen/text_pading_20"
            android:paddingRight="@dimen/text_pading_20"
            android:text="Ok"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/text_margin_10"
            android:layout_below="@+id/alertOkBtn" />


    </RelativeLayout>


</RelativeLayout>