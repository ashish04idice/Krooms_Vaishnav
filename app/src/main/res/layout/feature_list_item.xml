<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_width"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/featuresIcon"
            android:layout_width="@dimen/text_margin_30"
            android:layout_height="@dimen/text_margin_30"
            android:layout_centerHorizontal="true"
            android:background="@drawable/wifi"
            android:layout_marginTop="@dimen/text_margin_5"
                        />
        <com.krooms.hostel.rental.property.app.custom.CustomTextView
            android:id="@+id/featuresText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/featuresIcon"
            android:textSize="@dimen/text_size_14"
            android:maxLines="2"
            android:minLines="2"
            android:layout_centerHorizontal="true"
            android:text="Text"
            android:layout_marginBottom="@dimen/text_margin_5"
            android:textColor="@color/black"
            android:gravity="center"
            />
        <View
            android:id="@+id/bottomLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange_color"
            android:layout_below="@+id/featuresText"
            android:layout_margin="@dimen/text_margin_5"
            />

    </RelativeLayout>

</RelativeLayout>