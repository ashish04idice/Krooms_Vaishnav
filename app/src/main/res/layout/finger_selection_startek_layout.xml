<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="@color/orange_color"
        android:layout_height="@dimen/_52sdp">
        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/flback_button"
            android:visibility="visible"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_back_arrow"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_pading_10"
            android:drawablePadding="@dimen/text_pading_4"
            android:gravity="center"
            android:text="Enroll Tenant"
            android:textAllCaps="true"
            android:textColor="@drawable/white_text_selector"
            android:textSize="@dimen/text_size_18"
            android:textStyle="normal" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.10"
        >

        <TextView
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="@dimen/_14sdp"
        android:layout_height="match_parent"
        android:text="Please Select Finger"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_10sdp"
        android:visibility="visible"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:weightSum="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/thumb_layout"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_15sdp"
                />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"

                >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_15sdp"
                android:id="@+id/index_layout"
            />
          </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:weightSum="2"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thumb"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/radio1"
                />

                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Index Finger"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:textSize="@dimen/_15sdp"
                android:id="@+id/radio2"
                />
            </LinearLayout>

        </LinearLayout>

         </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.20"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="0.4"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnok"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:text="Ok"
                android:background="@drawable/button_back"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp"
                android:textColor="@android:color/white"
                android:textStyle="normal"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
