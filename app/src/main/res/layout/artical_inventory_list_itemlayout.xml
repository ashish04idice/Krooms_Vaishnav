<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/itemchildname"
                    android:text="Television"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#111111"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_id_textview"
                    android:text="Television"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_alignParentLeft="true"
                    android:textColor="#111111"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    />

                <EditText
                    android:layout_width="@dimen/_100sdp"
                    android:hint="Enter Code"
                    android:textSize="@dimen/_12sdp"
                    android:id="@+id/item_code"
                    android:textColorHint="@color/black"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@drawable/enter_code_button"
                    android:layout_toLeftOf="@+id/itemcheckbox"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_height="@dimen/_35sdp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:buttonTint="@color/black"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:focusableInTouchMode="false"
                    android:id="@+id/itemcheckbox"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="@dimen/_1sdp"></View>
</LinearLayout>

