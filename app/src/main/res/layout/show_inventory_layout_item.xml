<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2.1"
        android:layout_height="match_parent">

        <View
            android:layout_width="@dimen/_1sdp"
            android:background="@color/black"
            android:layout_height="match_parent"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="@dimen/_35sdp">


            <View
                android:layout_width="@dimen/_1sdp"
                android:visibility="gone"
                android:background="@color/black"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:id="@+id/artical_id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="item name"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/iteam_name_view1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:text="item_name"/>

            </LinearLayout>
            <View
                android:layout_width="@dimen/_1sdp"
                android:background="@color/black"
                android:layout_height="match_parent"></View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.9"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:textColor="@color/black"
                    android:id="@+id/iteam_quantity1"
                    android:textSize="@dimen/_15sdp"
                    android:text="item_quantity"/>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:background="@color/black"
                    android:layout_height="match_parent">

                </View>


            </LinearLayout>




            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="visible"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/iteam_remaing_quantity1"
                    android:textSize="@dimen/_15sdp"
                    android:text="remaining"/>

            </LinearLayout>


            <View
                android:layout_width="@dimen/_1sdp"
                android:background="@color/black"
                android:layout_height="match_parent">
            </View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:visibility="visible"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:id="@+id/iteam_price1"
                    android:textSize="@dimen/_15sdp"
                    android:text="price"/>



            </LinearLayout>

            <View
                android:layout_width="@dimen/_1sdp"
                android:background="@color/black"
                android:layout_height="match_parent">
            </View>



        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="@dimen/_1sdp"></View>


</LinearLayout>
