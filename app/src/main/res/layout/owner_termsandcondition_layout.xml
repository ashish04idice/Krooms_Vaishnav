<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/orange_color"
        android:layout_height="@dimen/_52sdp">
        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/lback_button"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_back_arrow"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_pading_10"
            android:drawablePadding="@dimen/text_pading_4"
            android:gravity="center"
            android:text="Terms And Condition"
            android:textAllCaps="true"
            android:textColor="@drawable/white_text_selector"
            android:textSize="@dimen/text_size_18"
            android:textStyle="normal" />


        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/btn_headericoncomplaintowner"
            android:visibility="gone"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_edit"
                />
        </RelativeLayout>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutcomplaintsendowner"
        android:visibility="visible"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/input_text_background"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_height="0dp"
                android:layout_weight="0.9">
                <LinearLayout
                    android:layout_width="@dimen/_40sdp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:background="@drawable/msg"
                        android:visibility="visible"
                        android:layout_height="@dimen/_20sdp" />

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:maxLines="6"
                    android:minLines="4"
                    android:lines="18"
                    android:id="@+id/terms"
                    android:paddingRight="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    android:hint="Enter Terms And Condition"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="normal"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.10"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/submit"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/custom_btn_focus"
                    android:text=" Submit "
                    android:textAllCaps="true"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@android:color/white"
                    android:textStyle="normal"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>

