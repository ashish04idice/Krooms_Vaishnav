<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/header"
        android:background="@color/orange_color"
        android:layout_height="@dimen/_52sdp">
        <RelativeLayout
            android:layout_width="@dimen/_45sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/flback_button"
            android:visibility="visible"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_back_arrow"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_pading_10"
            android:drawablePadding="@dimen/text_pading_4"
            android:gravity="center"
            android:text="Capture"
            android:textAllCaps="true"
            android:textColor="@drawable/white_text_selector"
            android:textSize="@dimen/text_size_18"
            android:textStyle="normal"
            android:id="@+id/textView3" />



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="0.6"
        android:layout_gravity="center"
        android:gravity="center"

        >

        <ImageView
            android:id="@+id/imageshow"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
             />

    </LinearLayout>



    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_1sdp"
        android:gravity="center"
        android:layout_weight="0.10"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btncapture"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:background="@drawable/button_back"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:maxLines="2"
        android:text="Status Message" />


    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="0.10"
        android:id="@+id/layout_save"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp">

        <Button
            android:id="@+id/btnsave"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_btn_focus"
            android:text="Save"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textSize="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            />

    </LinearLayout>



</LinearLayout>
